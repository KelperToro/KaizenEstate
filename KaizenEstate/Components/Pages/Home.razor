@page "/"
@using KaizenEstate.Shared.Models
@using KaizenEstate.Services
@inject ClientApiService ApiService

<div class="mb-5 text-center bg-light p-5 rounded-3 shadow-sm">
    <h1 class="display-5 fw-bold">Агентство "Домикс"</h1>
    <p class="lead">Найдите квартиру своей мечты или сдайте свою.</p>
</div>

@* === БЛОК ФИЛЬТРОВ === *@
<div class="row mb-4 g-2">
    <div class="col-md-6">
        <input type="text" class="form-control" placeholder="🔍 Поиск по названию или адресу..."
               @bind="searchText" @bind:event="oninput" />
    </div>
    <div class="col-md-3">
        <select class="form-select" @bind="selectedRooms">
            <option value="0">Все комнаты</option>
            <option value="1">1 комната</option>
            <option value="2">2 комнаты</option>
            <option value="3">3+ комнаты</option>
        </select>
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary w-100" @onclick="ApplyFilters">Применить</button>
    </div>
</div>

@if (filteredApartments == null)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else if (!filteredApartments.Any())
{
    <div class="alert alert-warning text-center">
        По вашему запросу ничего не найдено. 😿
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in filteredApartments)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 hover-effect">
                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://via.placeholder.com/300" : item.ImageUrl)"
                         class="card-img-top"
                         style="height: 220px; object-fit: cover;"
                         alt="@item.Title">

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title text-truncate" title="@item.Title">@item.Title</h5>
                            <span class="badge bg-success">@item.Price.ToString("N0") ₽</span>
                        </div>
                        <p class="card-text text-muted small"><i class="bi bi-geo-alt-fill"></i> @item.Address</p>

                        <div class="d-flex justify-content-between text-muted small mt-3">
                            <span>🏠 @item.Rooms комн.</span>
                            <span>wb @item.Area м²</span>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 pb-3">
                        <a href="/apartment/@item.Id" class="btn btn-outline-primary w-100">Подробнее</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .hover-effect:hover {
        transform: translateY(-5px);
        transition: transform 0.2s;
    }
</style>

@code {
    private List<Apartment>? allApartments;
    private List<Apartment>? filteredApartments;

    // Поля фильтрации
    private string searchText = "";
    private int selectedRooms = 0;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            allApartments = await ApiService.GetApartmentsAsync();
            filteredApartments = allApartments; // Изначально показываем все
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ОШИБКА: {ex.Message}");
        }
    }

    private void ApplyFilters()
    {
        if (allApartments == null) return;

        var query = allApartments.AsEnumerable();

        // Фильтр по тексту
        if (!string.IsNullOrWhiteSpace(searchText))
        {
            query = query.Where(a =>
                (a.Title?.Contains(searchText, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (a.Address?.Contains(searchText, StringComparison.OrdinalIgnoreCase) ?? false));
        }

        // Фильтр по комнатам
        if (selectedRooms > 0)
        {
            if (selectedRooms == 3)
                query = query.Where(a => a.Rooms >= 3);
            else
                query = query.Where(a => a.Rooms == selectedRooms);
        }

        filteredApartments = query.ToList();
    }
}